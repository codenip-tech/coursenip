version: '3.5'

services:
  courses-web:
    container_name: courses-web
    build:
      context: ./docker/nginx
      args:
        UID: $U_ID
    ports:
      - 260:80
    volumes:
      - ./public:/appdata/www/public
    depends_on:
      - courses-be
    networks:
      - courses-network

  courses-be:
    container_name: courses-be
    build:
      context: docker/php
      args:
        UID: $U_ID
    environment:
      PHP_IDE_CONFIG: serverName=Docker
      PHP_XDEBUG_ENABLED: 1
      XDEBUG_CONFIG: remote_host=172.17.0.1 remote_port=9005 # Linux users
    #      XDEBUG_CONFIG: remote_host=host.docker.internal remote_port=9005 # MacOS users
    volumes:
      - ./:/appdata/www
      - ./docker/php/xdebug-linux.ini:/usr/local/etc/php/conf.d/xdebug.ini
      #      - ./docker/php/xdebug-macos.ini:/usr/local/etc/php/conf.d/xdebug.ini
      - ~/.ssh/id_rsa:/home/appuser/.ssh/id_rsa
    depends_on:
      - courses-db
    networks:
      - courses-network

  courses-db:
    container_name: courses-db
    build:
      context: ./docker/database
    ports:
      - 31000:3306
    environment:
      MYSQL_DATABASE: courses
      MYSQL_USER: user
      MYSQL_PASSWORD: password
      MYSQL_ROOT_PASSWORD: root
    command: mysqld --sql_mode="STRICT_ALL_TABLES,NO_ENGINE_SUBSTITUTION"
    volumes:
      - courses-db-data:/var/lib/mysql
    networks:
      - courses-network

volumes:
  courses-db-data:

networks:
  courses-network:
    external: true
